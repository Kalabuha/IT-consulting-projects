@model ProjectModel

@{
    var state = ViewData.ModelState;
    var disabled = ViewBag.IsChangeDisabled != null && ViewBag.IsChangeDisabled;
}

<input asp-for="Id" type="hidden" />

<div class="content-block-standart-indent preset-content-block">
    <div class="prompt-block">
        <label asp-for="ProjectTitle" class="large-text font-family-2 black-text">Заголовок проекта</label>
    </div>

    <textarea asp-for="ProjectTitle" class="middle-text font-family-2 text-area-max-width-resize-vertical project-text-area-title" 
        disabled="@disabled" placeholder="Вводи заголовок сюда"></textarea>

    <div class="error-message-block">
        <span asp-validation-for="ProjectTitle" class="middle-text font-family-2 red-text"></span>
    </div>
</div>

<div class="content-block-standart-indent preset-content-block">
    <div class="project-content">
        <div class="project-block-description">
            <div class="prompt-block">
                <label asp-for="ProjectDescription" class="large-text font-family-2 black-text">Описание проекта</label>
            </div>

            <textarea asp-for="ProjectDescription" class="middle-text font-family-2 text-area-max-width-resize-vertical project-text-area-description" 
                disabled="@disabled" placeholder="Вводи описание сюда"></textarea>

            <div class="error-message-block">
                <span asp-validation-for="ProjectDescription" class="middle-text font-family-2 red-text"></span>
            </div>

        </div>
        <div class="project-block-logo-and-link">
            <div class="prompt-block">
                <label class="large-text font-family-2 black-text">Логотип</label>
            </div>
            @if (!string.IsNullOrEmpty(Model.CustomerCompanyLogoAsDataImage))
            {
                <div class="project-block-logo-image">
                    <img class="project-logo-image" src="@Model.CustomerCompanyLogoAsDataImage" alt="logo" />
                </div>
            }

            @if (!disabled)
            {
                <div class="project-block-insert-image">
                    <input asp-for="CustomerCompanyLogoAsFormFile" class="input-image" type="file" 
                        accept="image/jpeg,image/png" />
                </div>
            }

            <div class="prompt-block">
                <label asp-for="LinkToCustomerSite" class="large-text font-family-2 black-text">Ссылка</label>
            </div>
            <div class="project-block-link">
                <textarea asp-for="LinkToCustomerSite" class="text font-family-2 black-text text-area-max-width-resize-vertical project-text-area-link-customer-site" 
                disabled="@disabled" placeholder="Вводи ссылку сюда"></textarea>
            </div>
        </div>
    </div>
    <div class="project-published-block">
        <input asp-for="IsPublished" class="select-point" disabled="@disabled" />
        <label asp-for="IsPublished" class="middle-text font-family-2 black-text">&#10084; Опубликовать проект</label>
    </div>
</div>